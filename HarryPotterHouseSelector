ravenclaw = 0
hufflepuff = 0
slytherin = 0
gryffindor = 0
for char in range(5):
    if Ans[char] == 'A':
        ravenclaw += 1
    elif Ans[char] == 'B':
        hufflepuff += 1
    elif Ans[char] == 'C':
        slytherin += 1
    elif Ans[char] == 'D':
        gryffindor += 1
    else:
        pass
ravenclaw = (ravenclaw / 5) * 100
